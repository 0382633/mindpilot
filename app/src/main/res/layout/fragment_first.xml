<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/appLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MindPilot"
        android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textViewGreeting"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textViewGreeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:text="Good Morning, [User] ðŸ‘‹"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/appLogo"
        app:layout_constraintBottom_toTopOf="@id/textViewDailyPrompt"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textViewDailyPrompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="How are you feeling today?"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintEnd_toEndOf="@id/textViewGreeting"
        app:layout_constraintStart_toStartOf="@id/textViewGreeting"
        app:layout_constraintTop_toBottomOf="@id/textViewGreeting"

        app:layout_constraintBottom_toTopOf="@id/cardVibeCheck" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardVibeCheck"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="?attr/colorPrimaryContainer"
        app:cardCornerRadius="28dp"
        app:cardElevation="6dp"
        app:contentPadding="20dp"
        app:layout_constraintEnd_toEndOf="@id/textViewGreeting"
        app:layout_constraintStart_toStartOf="@id/textViewGreeting"
        app:layout_constraintTop_toBottomOf="@id/textViewDailyPrompt"

        app:layout_constraintBottom_toTopOf="@id/btn_view_log">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <TextView
                android:id="@+id/mood_terrible"
                style="@style/MoodOption"
                android:text="ðŸ˜­" />

            <TextView
                android:id="@+id/mood_bad"
                style="@style/MoodOption"
                android:text="ðŸ˜ž" />

            <TextView
                android:id="@+id/mood_okay"
                style="@style/MoodOption"
                android:text="ðŸ˜" />

            <TextView
                android:id="@+id/mood_good"
                style="@style/MoodOption"
                android:text="ðŸ˜Š" />

            <TextView
                android:id="@+id/mood_great"
                style="@style/MoodOption"
                android:text="ðŸ¤©" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_view_log"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="View My Mood Log"
        android:textSize="14sp"
        app:icon="@drawable/journal"
        app:iconSize="18dp"
        app:layout_constraintStart_toStartOf="@id/textViewGreeting"
        app:layout_constraintTop_toBottomOf="@id/cardVibeCheck"
        app:layout_constraintBottom_toTopOf="@id/buttonStartChat"
        tools:ignore="HardcodedText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonStartChat"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:minHeight="68dp"
        android:text="Start A Conversation"
        android:textSize="18sp"
        app:cornerRadius="16dp"
        app:icon="@drawable/chat"
        app:layout_constraintEnd_toEndOf="@id/textViewGreeting"
        app:layout_constraintStart_toStartOf="@id/textViewGreeting"
        app:layout_constraintTop_toBottomOf="@id/btn_view_log"

        app:layout_constraintBottom_toTopOf="@id/buttonCrisis" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCrisis"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Crisis Hotline / Immediate Help"

        app:backgroundTint="?attr/colorErrorContainer"
        android:textColor="?attr/colorOnErrorContainer"

        app:icon="@drawable/phone"
        app:iconTint="?attr/colorOnErrorContainer"

        app:layout_constraintEnd_toEndOf="@id/textViewGreeting"
        app:layout_constraintStart_toStartOf="@id/textViewGreeting"
        app:layout_constraintTop_toBottomOf="@id/buttonStartChat"

        app:layout_constraintBottom_toTopOf="@id/btn_sign_out" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sign_out"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sign Out"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintEnd_toEndOf="@id/textViewGreeting"
        app:layout_constraintStart_toStartOf="@id/textViewGreeting"
        app:layout_constraintTop_toBottomOf="@id/buttonCrisis"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>